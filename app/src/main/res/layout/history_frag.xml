<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3b404e"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:background="@drawable/history_frag_bg">


        <TextView
            android:id="@+id/payment_history_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Payment history"
            android:textSize="20sp" />

        <View
            android:id="@+id/payment_history_txt_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/payment_history_txt"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:alpha="0.5"
            android:background="@color/dark_custom1" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_frag_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payment_history_txt_line"
            android:layout_marginTop="20dp" />

    </RelativeLayout>

</RelativeLayout>