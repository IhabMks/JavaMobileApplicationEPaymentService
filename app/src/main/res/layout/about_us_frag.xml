<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="2sp"
        android:text="Intesy v. 1.0\nDeveloped by Ihab MKs"
        android:textAlignment="center"
        android:textColor="@color/dark_custom1"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/version"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Copyright â’¸ 2020 Intesy\nAll rights reserved."
        android:textAlignment="center"
        android:textColor="@color/dark_custom1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/follow_me_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/copyright"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:text="Follow Me on"
        android:textAlignment="center"
        android:textColor="@color/dark_custom1"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/follow_me_header"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/fb_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:background="@drawable/facebook_logo"
            android:foreground="@drawable/fb_twitter_button_custom" />

        <ImageButton
            android:id="@+id/twitter_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginStart="75dp"
            android:background="@drawable/twitter_logo"
            android:foreground="@drawable/fb_twitter_button_custom" />
    </LinearLayout>

</RelativeLayout>