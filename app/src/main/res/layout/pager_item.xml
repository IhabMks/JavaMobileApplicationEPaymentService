<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="?attr/selectableItemBackground"
        app:cardCornerRadius="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/brochure"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/news_1"
                android:scaleType="centerCrop"/>
           <TextView
               android:id="@+id/date"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/brochure"
               android:text="04/05/2020"
               android:textColor="#646464"
               android:layout_margin="8dp"
               android:textSize="15sp"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:text="Pas de coupure d'internet pour nos abonnÃ©s de Blida jusqu'au 04 Avril"
                android:textColor="@color/dark_custom1"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_margin="8dp"
                android:textSize="15sp"/>
            <ImageButton
                android:id="@+id/heart_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/title"
                android:layout_alignParentEnd="true"
                android:scaleType="centerInside"
                android:background="@drawable/heart_off"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>