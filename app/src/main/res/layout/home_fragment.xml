<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/person_using_smartphone">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_custom1"
        android:alpha="0.5"
        android:layout_margin="7.5dp">
    </RelativeLayout>

    <ImageView
        android:id="@+id/ring"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/circle_icon"
        android:alpha="0.9"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/text_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ring"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="135dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/home_slogan"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFFFF"
        android:textSize="55sp"
        android:textStyle="bold"
        android:visibility="visible" />
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:visibility="visible">
        <Button
            android:id="@+id/login_button_home_frag"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="LOGIN"
            android:fontFamily="@font/montserrat"
            android:textAllCaps="false"
            android:textColor="@color/dark_custom1"
            android:textSize="25sp"
            android:textStyle="normal"
            android:onClick="log_in_button_home_fct"
            android:background="@drawable/custom_button_6"/>
        <Button
            android:id="@+id/register_button_home_frag"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="Don't have an Account? Sign Up"
            android:textAllCaps="false"
            android:textColor="#FFFFFFFF"
            android:fontFamily="@font/montserrat"
            android:textSize="17.5sp"
            android:textStyle="normal"
            android:onClick="sign_up_button_home_fct"
            android:background="@drawable/custom_button7"/>
    </LinearLayout>

</RelativeLayout>